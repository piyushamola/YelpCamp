<% include ../partials/header%>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Example 1</li>
                <li class="list-group-item">Example 2</li>
                <li class="list-group-item">Example 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <p><img class="img-fluid" src="<%=campground.image %>"/></p>
                <div class="caption">
                    <h4 class="float-right">$9.00/night</h4>
                    <h4><a href="#"><%=campground.name%></a></h4>
                    
                    <p><%=campground.description%></p>
                    <p><em>Submitted By -</em><%=campground.author.username%></p>
                   <% if(currentUser && campground.author.id.equals(currentUser._id))
                    {  %>
                    <a href="/campground/<%=campground._id%>/edit" class="btn btn-warning">EDIT</a> 
                    <form action="/campground/<%=campground._id%>?_method=DELETE" method="POST" class="delete-form">
                        <input type="submit" class="btn btn-danger" value="DELETE">
                    </form>
                <%     }  %>
                </div>
            </div>
            <div class="card bg-light">
                <div class="card-body">
                    <div class="text-right">
                            <a href="/campground/<%=campground._id%>/comment/new" class="btn btn-success">Add new comment</a>
                    </div>
                      <hr>
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                        <div class="col-md-12">
                            
                        
                           
                       
                           <strong><%=comment.author.username%></strong>
                           <span class="float-right">10days</span>
                           <p>
                               <%=comment.text%>
                           </p>
                             <% if(currentUser && comment.author.id.equals(currentUser._id))
                    {  %>
                           <a class="btn btn-xs btn-warning" href="/campground/<%=campground._id%>/comment/<%=comment._id%>/edit">EDIT</a>
                           <form class="delete-form" action="/campground/<%=campground._id%>/comment/<%=comment._id%>?_method=DELETE" method="POST">
                               <input type="submit" class="btn btn-xs btn-danger" value="DELETE"> 
                           </form>
                        </div> 
                        <% } %>
                           </div> 
                    <% }); %>
                 
                </div>
            </div>
        </div>
    </div>
</div>


<% include ../partials/footer %>