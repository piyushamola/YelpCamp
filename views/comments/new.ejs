<% include ../partials/header%>
<div class="container">
    

<h1 style="text-align:center; padding:30px 0">Add a New Comment to <%=campground.name%></h1>
<div style="width:30%; margin:0 auto;">
<form action="/campground/<%=campground._id%>/comment" method="post">
    
    <div class="form-group">
    <input type="text" class="form-control" name="comment[text]" placeholder="text">
    </div>
   
    <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block">Submit</button>
    </div>
</form>
<a href="/campground">Campground</a>
</div>

</div>

